<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llPersonajes"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_grid_on_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Personajes"
            android:textColor="@color/semiWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="56dp"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/llSearch"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_search_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Búsqueda"
            android:textColor="@color/semiWhite"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="56dp"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/llPlanetas"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_blur_circular_24" /> <!-- Asegúrate de tener un ícono adecuado -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Planetas"
            android:textColor="@color/semiWhite"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
